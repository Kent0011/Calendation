<div class="container mt-3" style="max-width: 500px;">
  <h1>ユーザー情報</h1>

  <div class="card">
    <div class="card-body">
      <div class="mb-3">
        <strong>名前:</strong>
        <%= @user.name %>
      </div>

      <div class="mb-3">
        <strong>メールアドレス:</strong>
        <%= @user.email %>
      </div>

      <div class="mb-3">
        <strong>Notion APIキー:</strong>
        <%= @user.notion_api_key %>
      </div>

      <div class="mb-3">
        <strong>Notion データベースID:</strong>
        <%= @user.notion_database_id %>
      </div>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to 'カレンダー', calendar_user_path(@user), class: 'btn btn-info me-2' %>
    <%= link_to '編集', edit_user_path(@user), class: 'btn btn-primary me-2' %>
    <%= link_to '戻る', users_path, class: 'btn btn-secondary' %>
  </div>
</div>
