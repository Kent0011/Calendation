<div class="container m-5" style="max-width: 500px;">
  <h1>ユーザー情報編集</h1>

  <%= form_with(model: @user, local: true) do |f| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <p><%= pluralize(@user.errors.count, "個") %>のエラーがあります</p>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, '名前' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :notion_api_key, 'Notion APIキー' %>
      <%= f.text_field :notion_api_key, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :notion_database_id, 'Notion データベースID' %>
      <%= f.text_field :notion_database_id, class: 'form-control' %>
    </div>

    <div class="actions mt-3">
      <%= f.submit '更新する', class: 'btn btn-primary me-2' %>
      <%= link_to '戻る', user_path(@user), class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
