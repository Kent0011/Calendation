<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <h1 class="mb-4">ユーザー一覧</h1>

      <div class="mb-3">
        <%= link_to '新規ユーザー登録', new_user_path, class: 'btn btn-primary' %>
      </div>

      <div class="card">
        <div class="card-body">
          <% if @users.any? %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>名前</th>
                    <th>メールアドレス</th>
                    <th>操作</th>
                  </tr>
                </thead>
                <tbody>
                  <% @users.each do |user| %>
                    <tr>
                      <td><%= user.name %></td>
                      <td><%= user.email %></td>
                      <td>
                        <%= link_to '詳細', user_path(user), class: 'btn btn-info btn-sm me-2' %>
                        <%= link_to '編集', edit_user_path(user), class: 'btn btn-warning btn-sm me-2' %>
                        <%= link_to '削除', user_path(user), 
                            method: :delete, 
                            data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' }, 
                            class: 'btn btn-danger btn-sm' %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <p class="text-center">ユーザーが登録されていません</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
